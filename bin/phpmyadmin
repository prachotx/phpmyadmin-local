#!/bin/bash
case "$1" in
  start)
    docker compose -f ~/phpmyadmin-local/docker-compose.yml up -d
    ;;
  stop)
    docker compose -f ~/phpmyadmin-local/docker-compose.yml down
    ;;
  restart)
    docker compose -f ~/phpmyadmin-local/docker-compose.yml down
    docker compose -f ~/phpmyadmin-local/docker-compose.yml up -d
    ;;
  *)
    echo "Usage: $0 {start|stop|restart}"
    ;;
esac
